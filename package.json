  "dependencies": {
    "@craco/craco": "^6.2.0",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@material-ui/core": "^5.0.0-beta.2",
    "@material-ui/icons": "^5.0.0-beta.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.4.12",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/uuid": "^8.3.1",
    "axios": "^0.21.1",
    "craco-alias": "^3.0.1",
    "firebase": "^9.0.0-beta.8",
    "history": "^5.0.0",
    "husky": "^7.0.1",
    "lodash": "^4.17.21",
    "msw": "^0.33.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.19.1",
    "react-router-dom": "^6.0.0-beta.0",
    "react-scripts": "4.0.3",
    "typescript": "^4.3.5",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --silent",
    "test:check": "craco test --silent --watchAll=false",
    "format": "yarn format:check --write",
    "format:check": "prettier --list-different \"**/*.{ts,tsx,html,scss,css,js,json,md}\"",
    "verify": "run-p format:check test:check",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "es5"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
